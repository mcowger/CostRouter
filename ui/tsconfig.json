{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "#schemas/*": [
        "../dist/schemas/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "../schemas"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}