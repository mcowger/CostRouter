{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@server/*": [
        "server/*"
      ],
      "@ui/*": [
        "ui/*"
      ],
      "#schemas/*": [
        "schemas/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "ES2022",
      "DOM"
    ]
  },
  "include": [
    "server/**/*",
    "schemas/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ui/dist",
    "**/*.test.ts",
    "**/__tests__",
    "**/__mocks__"
  ]
}