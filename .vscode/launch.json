{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "request": "launch",
      "type": "node",
      "skipFiles": [
        "<node_internal>/**"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "dev:server",
      ]
    },
    {
      "name": "Frontend",
      "request": "launch",
      "type": "node",
      "skipFiles": [
        "<node_internal>/**"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "showAsyncStacks": true,
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "-w",
        "-F",
        "ui",
        "run",
        "dev"
      ]
    }
  ],
  "compounds": [
    {
      "name": "All",
      "configurations": [
        "Backend",
        "Frontend"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ]
}